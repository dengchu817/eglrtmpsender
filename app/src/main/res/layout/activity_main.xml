<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dengchu.eglrtmpsender.MainActivity">

    <TextureView
        android:id = "@+id/video_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.dengchu.eglrtmpsender.WheelView.WheelView
        android:id="@+id/change_fliter"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/filterchoose_backgroud"
        app:dividerColor="#00ffffff"
        app:wheelDividerSize="0dp"
        app:wheelItemCount="2"
        app:wheelItemSize="45dp"
        app:wheelOrientation="horizontal"
        app:wheelTextColor="#ffffff"
        app:wheelTextColorCenter="#8EE5EE"
        app:wheelTextSize="14sp"/>

</RelativeLayout>
